@{
    ViewBag.Title = "FiveBottles";
}

<h2>FiveBottles</h2>

<hr />

@for (int i = 99; i > 0; i -= 5)
{
    if (i > 5)
    {
        <p>@i bottles of beer on the wall @i bottles of beer, take 5 down pass it around @(i - 5) bottles of beer on the wall.</p>
    }
    else
    {
        <p>Not Enough bottles, We will take @i bottles</p>
        <p>@i bottles of beer on the wall @i bottles of beer, take @i down pass it around @(i - i) bottles of beer on the wall.</p>
    }
}

<p>YOU'RE OUT OF BEER!</p>
